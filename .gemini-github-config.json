{
  "gemini": {
    "model": "gemini-2.5-flash",
    "temperature": 0.7
  },
  "github": {
    "default_labels": ["ai-generated", "needs-review"],
    "default_assignee": "@me"
  },
  "automation": {
    "auto_analyze_on_push": true,
    "create_issues_from_todos": true,
    "max_issues_per_run": 5
  },
  "file_patterns": {
    "include": ["*.py", "*.js", "*.java", "*.cpp", "*.go", "*.rs"],
    "exclude": ["node_modules/", "*.test.*", "*.spec.*"]
  }
}
